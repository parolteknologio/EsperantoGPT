{
    "openapi": "3.0.1",
    "info": {
        "version": "1.0.0",
        "title": "Reta-Vortaro Dictionary API"
    },
    "paths": {
        "/cgi-bin/sercxu-json-2k.pl": {
            "post": {
                "summary": "Search for a word in the Reta-Vortaro dictionary.",
                "operationId": "search_reta_vortaro",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "sercxata": {
                                        "type": "string",
                                        "description": "The word or word fragment to search for in the dictionary."
                                    }
                                },
                                "required": ["sercxata"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful search results in JSON format"
                    },
                    "default": {
                        "description": "Error response"
                    }
                }
            }
        }
    },
    "servers": [
        {
            "url": "https://reta-vortaro.de"
        }
    ]
}
